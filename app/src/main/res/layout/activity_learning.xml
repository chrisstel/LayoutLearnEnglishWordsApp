<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/IM_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/TV_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/IM_close"
        app:layout_constraintBottom_toTopOf="@id/LL_select_bar"
        android:layout_marginTop="86dp"
        android:layout_marginHorizontal="33dp"
        tools:text="Galaxy"
        android:text="Galaxy"
        android:textSize="50sp"
        android:textColor="@color/dark_gray" />

    <LinearLayout
        android:id="@+id/LL_select_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV_word"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="34dp">

        <LinearLayout
            android:id="@+id/LL_first_variant"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginBottom="17dp"
            android:background="@drawable/shape_rounded_containers">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/_1"
                android:textSize="16sp"
                android:textColor="@color/text_gray"
                android:background="@drawable/shape_rounded_variants"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                tools:text="Ломать"
                android:text="Ломать"
                android:textColor="#888992"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL_second_variant"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginBottom="17dp"
            android:background="@drawable/shape_rounded_containers">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/_2"
                android:textSize="16sp"
                android:textColor="@color/text_gray"
                android:background="@drawable/shape_rounded_variants"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                tools:text="Сон"
                android:text="Сон"
                android:textColor="#888992"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL_third_variant"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginBottom="17dp"
            android:background="@drawable/shape_rounded_containers">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/_3"
                android:textSize="16sp"
                android:textColor="@color/text_gray"
                android:background="@drawable/shape_rounded_variants"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                tools:text="Галактика"
                android:text="Галактика"
                android:textColor="#888992"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL_fourth_variant"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginBottom="17dp"
            android:background="@drawable/shape_rounded_containers">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/_4"
                android:textSize="16sp"
                android:textColor="@color/text_gray"
                android:background="@drawable/shape_rounded_variants"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                tools:text="Утюг"
                android:text="Утюг"
                android:textColor="#888992"
                android:textSize="16sp"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_skip"
        android:layout_width="310dp"
        android:layout_height="58dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp"
        android:text="@string/_skip"
        tools:textAllCaps="true"
        android:textSize="16sp"
        android:backgroundTint="@drawable/selector_skip_button"
        android:visibility="gone"/>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/CL_correct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_height="136dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/green"
        android:visibility="gone">

        <ImageView
            android:id="@+id/IV_correct"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="36dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/ic_correct"/>

        <TextView
            android:id="@+id/TV_correct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/IV_correct"
            app:layout_constraintTop_toTopOf="@id/IV_correct"
            app:layout_constraintBottom_toBottomOf="@id/IV_correct"
            android:layout_marginStart="8dp"
            android:text="@string/_correct"
            android:textSize="22sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/BTN_continue_correct"
            android:layout_width="310dp"
            android:layout_height="58dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp"
            android:layout_marginHorizontal="33dp"
            android:text="@string/_continue"
            android:textSize="22sp"
            android:textColor="@color/green"
            android:gravity="center"
            android:backgroundTint="@drawable/selector_continue_button"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/CL_wrong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_height="136dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/red">

        <ImageView
            android:id="@+id/IV_wrong"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="36dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/ic_wrong"/>

        <TextView
            android:id="@+id/TV_wrong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/IV_wrong"
            app:layout_constraintTop_toTopOf="@id/IV_wrong"
            app:layout_constraintBottom_toBottomOf="@id/IV_wrong"
            android:layout_marginStart="8dp"
            android:text="@string/_wrong"
            android:textSize="22sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/BTN_continue_wrong"
            android:layout_width="310dp"
            android:layout_height="58dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp"
            android:layout_marginHorizontal="33dp"
            android:text="@string/_continue"
            android:textSize="22sp"
            android:textColor="@color/red"
            android:gravity="center"
            android:backgroundTint="@drawable/selector_continue_button"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>